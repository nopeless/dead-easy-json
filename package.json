{
  "name": "dead-easy-json",
  "version": "1.1.0",
  "description": "Dead-easy JSON serialization for JavaScript, with async support",
  "main": "src/index.js",
  "scripts": {
    "test": "mocha",
    "__comment": "some of these are broken. use at your own risk",
    "test:watch": "mocha --watch-ignore [\".json\"] --watch 'src/**/*.js' 'test/**/*.spec.js' --bail",
    "test:one": "npm run test:watch -- --grep",
    "test:coverage": "nyc --reporter=text npm run test",
    "test:html": "nyc --reporter=html npm run test",
    "ci": "npm run lint && npm run test",
    "push": "nyc --reporter=lcov npm run test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nopeless/dead-easy-json.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nopeless/dead-easy-json/issues"
  },
  "homepage": "https://github.com/nopeless/dead-easy-json#readme",
  "devDependencies": {
    "chai": "*",
    "coveralls": "^3.1.1",
    "eslint": "^7.32.0",
    "mocha": "*",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^15.1.0"
  }
}
